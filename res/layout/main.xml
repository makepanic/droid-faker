<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/headline.main"
            android:id="@+id/textView" android:layout_margin="5dip"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/button.contacts"
                android:id="@+id/buttonContacts" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonContactsSettings" android:background="@android:drawable/ic_menu_manage"
                android:layout_gravity="center" android:layout_marginLeft="10dip" android:layout_marginRight="10dip"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout">
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="@string/button.sms" android:id="@+id/button" android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" android:layout_weight="1"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/imageButton" android:background="@android:drawable/ic_menu_manage"
                     android:layout_gravity="center" android:layout_marginLeft="10dip"
                     android:layout_marginRight="10dip"/>
    </LinearLayout>
</LinearLayout>

